@inject BlendedAdmin.Services.IUrlServicecs urlService
@model BlendedAdmin.Models.Environments.EnvironmentModel

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Environment</h1>
</div>

<form id="editForm" action="@urlService.GetUrl()" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Name">Color</label>
        <input asp-for="Color" class="form-control" placeholder="" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a  class="btn btn-default" asp-controller="Environments" asp-action="Index">Go back</a>
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>