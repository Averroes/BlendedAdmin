@model List<BlendedAdmin.Models.Environments.EnvironmentModel>

@{ViewData["Title"] = "Environments";}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Environments</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a class="btn btn-sm btn-outline-secondary" asp-controller="Environments" asp-action="Create">
            <span data-feather="edit"></span>
            Create environment
        </a>
    </div>
</div>


@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th class="border-top-0">Name</th>
                    <th class="border-top-0">Color</th>
                    <th class="border-top-0"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (BlendedAdmin.Models.Environments.EnvironmentModel environment in Model)
                {
                    <tr>
                        <td><a asp-action="Edit" asp-route-id="@environment.Id">@environment.Name</a></td>
                        <td>@environment.Color</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@environment.Id" class="text-secondary"><span class="fa fa-pencil-square-o"></span>Edit</a>
                            <a asp-action="Delete" asp-route-id="@environment.Id" class="text-secondary"><span class="fa fa-trash-o"></span>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div style="margin-left:10px;" class="text-muted">No environment exists yet.</div>
}