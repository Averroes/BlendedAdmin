@inject BlendedAdmin.Services.IUrlService urlService
@model BlendedAdmin.Models.Users.ChangeMyPassowrdModel

@{ViewData["Title"] = "Change Passwoed - Users";}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">User - Change Passwoed</h1>
</div>
<form action="@urlService.GetUrl()" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model.Succeeded)
    {
        <div class="alert alert-success" role="alert">
            The password was changed.
        </div>
    }
    <div class="form-group">
        <label for="CurrentPassword">Current Password</label>
        <input asp-for="CurrentPassword" class="form-control" type="password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CurrentPassword">New Password</label>
        <input asp-for="NewPassword" class="form-control" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        <button type="submit" class="btn btn-outline-primary">Save</button>
    </div>
</form>